{
    "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "sourceMap": true,
      "jsx": "react",
      "allowJs": true,
      "types": [
        "node"
      ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}